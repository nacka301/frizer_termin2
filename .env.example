# Environment variables for Hetzner deployment
# Copy this file to .env and fill in your actual values

# Database configuration (auto-configured in docker-compose)
DATABASE_URL=postgresql://frizerke_user:frizerke_password@postgres:5432/frizerke_db
POSTGRES_PASSWORD=frizerke_password

# Session secret (generate a strong random string)
SESSION_SECRET=your_very_strong_session_secret_here

# Email configuration
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Admin email
ADMIN_EMAIL=admin@salon.hr

# Application settings
NODE_ENV=production
PORT=3000

# Security
HTTPS_ONLY=false

# Monitoring
HEALTH_CHECK_INTERVAL=5
LOG_RETENTION_DAYS=30
